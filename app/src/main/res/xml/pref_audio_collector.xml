<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- NOTE: Hide buttons to simplify the UI. Users can touch outside the dialog to
         dismiss it. -->
    <!-- NOTE: ListPreference's summary should be set to its value by the activity code. -->
    <ListPreference
        android:defaultValue="@integer/pref_sample_rate_default_value"
        android:entries="@array/pref_sample_rate_list_titles"
        android:entryValues="@array/pref_sample_rate_list_values"
        android:key="sample_rate"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="@string/pref_title_sample_rate" />
    <ListPreference
        android:defaultValue="@integer/pref_channel_config_default_value"
        android:entries="@array/pref_channel_config_list_titles"
        android:entryValues="@array/pref_channel_config_list_values"
        android:key="channel_config"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="@string/pref_title_channel_config" />
    <ListPreference
        android:defaultValue="@integer/pref_encoding_default_value"
        android:entries="@array/pref_encoding_list_titles"
        android:entryValues="@array/pref_encoding_list_values"
        android:key="encoding"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="@string/pref_title_encoding" />

    <!-- NOTE: EditTextPreference accepts EditText attributes. -->
    <!-- NOTE: EditTextPreference's summary should be set to its value by the activity code. -->
    <EditTextPreference
        android:defaultValue="@integer/pref_buffer_size_default_value"
        android:inputType="number"
        android:key="buffer_size"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="@string/pref_title_buffer_size" />
    <EditTextPreference
        android:defaultValue="@integer/pref_poll_period_default_value"
        android:inputType="number"
        android:key="poll_period"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="@string/pref_title_poll_period" />

</PreferenceScreen>
